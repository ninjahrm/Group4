pipeline {
  agent any

  tools {
    nodejs 'NodeJS 18'
    allure 'Allure'
  }

  environment {
    HOME = "${env.WORKSPACE}"
    CI = 'true'
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/ninjahrm/Group4.git', branch: 'main'
      }
    }

    stage('Install Dependencies') {
      steps {
        bat 'npm ci'
      }
    }
    stage('Clean Allure Results') {
     steps {
       bat 'rmdir /s /q allureapi-results' // Windows command to delete folder
       bat 'mkdir allureapi-results'       // Recreate folder to avoid errors
  }
}

    stage('Run Tests') {
      steps {
       bat 'npm run test tests/api'
      }
    }

    stage('Generate Allure Report') {
      steps {
        bat 'allure generate ./allureapi-results --clean -o ./allureapi-report'
      }
    }
  }
  post {
    always {
      allure([
        reportBuildPolicy: 'ALWAYS',
        includeProperties: false,
        jdk: '',
        results: [[path: 'allureapi-results']]
      ])
    }

    /* stage('Publish Report') {
      steps {
        publishHTML(target: [
          reportDir: 'playwright-report',
          reportFiles: 'index.html',
          reportName: 'Playwright Test Report'
        ])
      }
    } */
  }
}
